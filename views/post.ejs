<%- include('partials/postHeader') -%>

<div class="bg-white py-12" style="background-image: url()";>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="lg:text-center">
      <p class="mt-2 text-3xl font-bold leading-8 tracking-tight text-gray-900"><%= post.website %></p>
      <p class="mt-4 max-w-2xl text-xl text-gray-500 lg:mx-auto"><%= post.description %></p>
    </div>
  </div>   
    <a class="btn btn-primary" href="/feed">Return to Directory</a>
</div>
  
<!--Add Review Form-->

<div class="container mt-8 flex flex-col justify-center items-center">
 
      <div class="card-body m-3 card w-96 bg-base-100 shadow-xl">
     
      
<div class=""> 
            <h2 class ="text-5xl font-bold">Add a Review</h2>
            <form action="/review/createReview"  method="POST"> 
             <p class ="mt-8">
                 <label for="website" class="mt-3 form-label">Your rating for <%=post.name%></label>
             </p>
        
             <div class="rating gap-1 mt-2">
              <input type="radio" name="rating-3" class="mask mask-heart bg-red-400" />
              <input type="radio" name="rating-3" class="mask mask-heart bg-orange-400" checked />
              <input type="radio" name="rating-3" class="mask mask-heart bg-yellow-400" />
              <input type="radio" name="rating-3" class="mask mask-heart bg-lime-400" />
              <input type="radio" name="rating-3" class="mask mask-heart bg-green-400" />
            </div> 
              <!--enctype="multipart/form-data"-->
            </div>
           
            
            <div class="mb-3">
              <label for="review" class="form-label">Review</label>
              <div>
                  <textarea type="text" class="textarea" id="review" name="review" placeholder="tell us"></textarea>
              </div>
            
            </div>
          
              <input type="hidden" name="post" value="<%=post._id%>" />
              <button type="submit" class="m-2 btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
    
<div>
    <% review.forEach( el=> { %>
    <p><%= el.review %></p>
    <% }) %>
</div>

  
    </div>

  
<%- include('partials/footer') -%>
